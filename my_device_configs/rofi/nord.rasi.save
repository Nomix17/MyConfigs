
* {
  background-color: #2e3440;
  text-color: #d8dee9;
  border-color: #4c566a;
  separator-color: #4c566a;
  border: 2px;
  padding: 10px;
  spacing: 5px;
}

window {
  width: 30%;
  background-color: #3b4252;
  border-color: #88c0d0;
  border: 1px;
}

listview {
  lines: 5;
  scrollbar: false;
}

element {
  background-color: transparent;
  text-color: #eceff4;
}

element selected {
  background-color: #4c566a;
  text-color: #8fbcbb;
}

scrollbar {
  width: 4px;
  handle-color: #88c0d0;
  handle-width: 100%;
}
